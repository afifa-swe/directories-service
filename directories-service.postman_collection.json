          "request": {
            "method": "POST",
            "header": [ { "key": "Authorization", "value": "Bearer {{access_token}}" } ],
            "body": { "mode": "formdata", "formdata": [ { "key": "file", "type": "file", "src": "" } ] },
            "url": { "raw": "{{baseUrl}}/api/swift/import", "host": ["{{baseUrl}}"], "path": ["api", "swift", "import"] }
          }
        ,
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status code is 200', function () { pm.response.to.have.status(200); });",
                  "pm.test('Response has expected keys', function () {",
                  "  var json = pm.response.json();",
                  "  pm.expect(json).to.have.property('message');",
                  "  pm.expect(json).to.have.property('data');",
                  "  pm.expect(json).to.have.property('timestamp');",
                  "  pm.expect(json).to.have.property('success');",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
          ]
        }
      ]
