    { "key": "baseUrl", "value": "http://localhost:8095", "type": "string" },
    { "key": "access_token", "value": "", "type": "string" },
    { "key": "id", "value": "", "type": "string" },
    { "key": "passport_client_id", "value": "019998dd-034c-70c3-9132-41f41c51d15f", "type": "string" },
