  "item": [
    {
      "name": "Auth",
      "item": [
        {
          "name": "POST /api/register — Регистрация",
          "request": {
            "method": "POST",
            "header": [ { "key": "Content-Type", "value": "application/json" } ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Test User\",\n  \"email\": \"user@example.test\",\n  \"password\": \"password\",\n  \"password_confirmation\": \"password\"\n}"
            },
            "url": { "raw": "{{baseUrl}}/api/register", "host": ["{{baseUrl}}"], "path": ["api", "register"] }
          }
        },
        {
          "name": "POST /api/login — Логин (сохранение access_token)",
          "request": {
            "method": "POST",
            "header": [ { "key": "Content-Type", "value": "application/json" } ],
            "body": { "mode": "raw", "raw": "{\n  \"email\": \"user@example.test\",\n  \"password\": \"password\"\n}" },
            "url": { "raw": "{{baseUrl}}/api/login", "host": ["{{baseUrl}}"], "path": ["api", "login"] }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test(\"Access token сохранён\", function () {",
                  "  const res = pm.response.json();",
                  "  if (res && res.access_token) {",
                  "    pm.collectionVariables.set(\"access_token\", res.access_token);",
                  "    pm.test(\"access_token set\", function() { pm.expect(res.access_token).to.not.be.empty; });",
                  "  } else {",
                  "    pm.test(\"access_token missing\", function() { pm.expect(res.access_token).to.exist; });",
                  "  }",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
          ]
        }
      ]
    },
